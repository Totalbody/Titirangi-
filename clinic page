        <section id="services">
            <div class="container">
                <h2 class="section-title">Our Services</h2>
                <div class="services-grid">
                    <div class="service-box" onclick="openModal('manual-therapy')">
                        <img src="https://via.placeholder.com/250x150?text=Manual+Therapy" alt="Manual Therapy">
                        <h3>Manual Therapy</h3>
                    </div>
                    <div class="service-box" onclick="openModal('pilates')">
                        <img src="https://via.placeholder.com/250x150?text=Pilates" alt="Pilates">
                        <h3>Pilates</h3>
                    </div>
                    <div class="service-box" onclick="openModal('careway')">
                        <img src="https://via.placeholder.com/250x150?text=Careway+Pathway" alt="Careway Pathway">
                        <h3>Careway Pathway</h3>
                    </div>
                    <div class="service-box" onclick="openModal('sports-rehab')">
                        <img src="https://via.placeholder.com/250x150?text=Sports+and+Injury+Rehab" alt="Sports and Injury Rehab">
                        <h3>Sports and Injury Rehab</h3>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <div id="serviceModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2 id="modalTitle"></h2>
            <img id="modalImage" src="" alt="" style="width: 100%; max-height: 300px; object-fit: cover; margin-bottom: 1rem;">
            <p id="modalDescription"></p>
        </div>
    </div>

    <script>
        const modal = document.getElementById("serviceModal");
        const modalTitle = document.getElementById("modalTitle");
        const modalImage = document.getElementById("modalImage");
        const modalDescription = document.getElementById("modalDescription");

        const services = {
            'manual-therapy': {
                title: 'Manual Therapy',
                image: 'https://via.placeholder.com/600x300?text=Manual+Therapy+Detail',
                description: 'Our expert physiotherapists use hands-on techniques to manipulate joints, massage muscles, and improve overall physical function. This approach helps alleviate pain, increase flexibility, and promote faster healing.'
            },
            'pilates': {
                title: 'Pilates',
                image: 'https://via.placeholder.com/600x300?text=Pilates+Detail',
                description: 'Our Pilates classes focus on core strength, flexibility, and body awareness. Whether you're recovering from an injury or looking to improve your overall fitness, our tailored Pilates programs cater to all levels.'
            },
            'careway': {
                title: 'Careway Pathway',
                image: 'https://via.placeholder.com/600x300?text=Careway+Pathway+Detail',
                description: 'The Careway Pathway is an ACC-funded program designed to provide comprehensive care for specific injuries. Our team works closely with you to create a personalized recovery plan and guide you through every step of your rehabilitation journey.'
            },
            'sports-rehab': {
                title: 'Sports and Injury Rehab',
                image: 'https://via.placeholder.com/600x300?text=Sports+and+Injury+Rehab+Detail',
                description: 'Our sports and injury rehabilitation services cater to athletes of all levels. We combine advanced therapeutic techniques with personalized exercise programs to help you recover from injuries, improve performance, and prevent future problems.'
            }
        };

        function openModal(service) {
            modalTitle.textContent = services[service].title;
            modalImage.src = services[service].image;
            modalImage.alt = services[service].title;
            modalDescription.textContent = services[service].description;
            modal.style.display = "block";
        }

        function closeModal() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        }
    </script>
</body>
